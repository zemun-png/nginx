pipeline {
    agent any
    stages {
        stage('Build Images') {
            steps {
                sh 'docker image rm mynginx:latest '
                sh 'docker build -t mynginx:latest .'
            }
            post {
                success {
                    echo "images build successfull ..."
                }
            }
        }

        stage('Create container '){
            steps {
                sh "docker rm my_nginx -f"
                sh "docker-compose up -d"
            }
        }

    }
}
